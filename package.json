{
  "name": "juribank-professional-platform",
  "version": "3.1.0",
  "description": "JuriBank v3.1 - Professional UK legal & financial help platform with freemium model, real-time API content from Gov.UK/FCA/Ombudsman, community forum, guided tools, and progress tracking. Professional platform helping people understand their legal rights through expert resources and support.",
  "main": "index.html",
  "scripts": {
    "dev": "npx serve . -l 8000",
    "start": "npx serve . -l 8000",
    "build": "node scripts/optimize-build.js && npm run build:js && npm run optimize:images && npm run security:scan && echo 'âœ… JuriBank production build complete!'",
    "build:css": "tailwindcss -i ./src/input.css -o ./assets/styles.css --watch",
    "build:css-prod": "tailwindcss -i ./src/input.css -o ./assets/styles.css --minify",
    "build:js": "node scripts/minify-js.js",
    "optimize:images": "node scripts/optimize-images.js",
    "preview": "npx serve . -l 8000",
    "deploy": "npm run build && vercel --prod",
    "test": "jest",
    "test:performance": "node scripts/performance-test.js",
    "lint": "eslint . --ext .js,.ts --config .eslintrc.banking.cjs",
    "lint:security": "eslint . --ext .js,.ts --config .eslintrc.banking.cjs --env es6,browser,node",
    "format": "prettier --write .",
    "security:scan": "npm audit --audit-level=moderate && node scripts/security-scan.js",
    "security:headers": "node scripts/test-security-headers.js",
    "performance:analyze": "node scripts/bundle-analyzer.js",
    "performance:budget": "node scripts/performance-budget.js",
    "agents:validate": "echo 'Validating Claude agents...' && find .claude/agents -name '*.md' -exec echo 'Validated: {}' \\;",
    "health": "echo 'JuriBank Platform Health Check' && npm run agents:validate && npm run security:scan && npm run performance:budget",
    "ci:test": "npm run lint:security && npm run test && npm run test:performance",
    "ci:build": "npm run build && npm run security:headers"
  },
  "type": "module",
  "keywords": [
    "legal-platform",
    "professional-legal-services",
    "financial-rights-guidance",
    "banking-dispute-resolution",
    "consumer-rights-information",
    "legal-information-platform",
    "freemium-legal-help",
    "api-driven-content",
    "gov-uk-integration",
    "fca-consumer-guidance",
    "ombudsman-information",
    "professional-support-community",
    "legal-guidance-platform",
    "guided-legal-tools",
    "progress-tracking",
    "regulatory-compliance",
    "uk-legal-information",
    "banking-rights-guidance",
    "expert-moderation",
    "professional-legal-project",
    "accessible-legal-info",
    "mobile-first-platform",
    "responsive-legal-platform",
    "ai-legal-assistant",
    "case-progress-tracking",
    "interactive-legal-tools",
    "typescript-components",
    "react-platform",
    "subscription-management",
    "real-time-api-content"
  ],
  "author": "JuriBank Professional Legal Platform",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/giquina/juribank-professional.git"
  },
  "homepage": "https://banking-law.vercel.app",
  "dependencies": {
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "lodash": "^4.17.21",
    "marked": "^9.1.6",
    "puppeteer": "^24.15.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/lodash": "^4.14.202",
    "@types/uuid": "^9.0.7",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^0.23.0",
    "imagemin": "^8.0.1",
    "imagemin-svgo": "^10.0.1",
    "imagemin-webp": "^6.1.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "serve": "^10.0.2",
    "sharp": "^0.33.1",
    "tailwindcss": "^3.3.6",
    "terser": "^5.26.0",
    "vercel": "^44.7.3"
  },
  "engines": {
    "node": "18.x || 20.x",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "performance": {
    "budgets": {
      "initial": "200kb",
      "maximum": "500kb",
      "warning": "400kb"
    }
  },
  "security": {
    "audit": true,
    "headers": true,
    "dependencies": true
  }
}
